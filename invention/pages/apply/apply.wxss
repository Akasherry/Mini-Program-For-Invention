/* pages/apply/apply.wxss */
page{
  background-color: #eeeeee;
}
.label{
  background-color: #2f5249;
  border-radius: 10rpx;
  color: white;
  margin: 10rpx;
}
.input{
  border-radius: 10rpx;
  border: 1rpx;
  border-color: #e9e8df;
  margin: 10rpx;
}
.btn{
  margin:10rpx;
  background: #2f5249;
  background-image: -webkit-linear-gradient(top, #2f5249cc,#2f5249);
  background-image: -moz-linear-gradient(top, #2f5249cc, #2f5249);
  background-image: -ms-linear-gradient(top,#2f5249cc, #2f5249);
  background-image: -o-linear-gradient(top, #2f5249cc,#2f5249);
  background-image: linear-gradient(to bottom, #2f5249cc, #2f5249);
  text-shadow: 0px 1px 0px #2f5249;
  font-family: Arial;
  color: #ffffff;
  font-size: 16px;
  padding: 12px 30px 12px 30px;
  border: solid #3b6e22 1px;
  text-decoration: none;
  height:80rpx;
  text-align: center;
  line-height: 19px;
  vertical-align: middle;
}
